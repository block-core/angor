@inherits LayoutComponentBase
@inject IJSRuntime Js;
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between">
            <div class="alert alert-warning mb-2 mt-2 py-2" role="alert">
                Alpha app - only use test wallets.
            </div>
            <div>
                <span @onclick="InstallApp" role="button" class="d-none" id="installButton">Install</span>
                <a href="https://github.com/block-core/angor" target="_blank">GitHub</a>
            </div>

        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
 
    private async Task InstallApp()
    {
        try
        {
            await Js.InvokeVoidAsync("angor.installApp");
        }
        catch (Exception ex)
        {
            await Console.Error.WriteLineAsync($"Error calling installApp: {ex.Message}");
        }
    }


}