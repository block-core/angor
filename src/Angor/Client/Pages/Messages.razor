    private async Task SendMessage()
    {
        if (currentChat == null || string.IsNullOrWhiteSpace(newMessage)) return;

        isSendingMessage = true;
        StateHasChanged();

        try
        {
            // Get partner's public key in proper format
            string partnerPubKey = currentChat.PartnerPubKeyHex;
            
            // If partner key is missing or in npub format, convert it
            if (string.IsNullOrEmpty(partnerPubKey) || partnerPubKey.StartsWith("npub"))
            {
                partnerPubKey = NostrHelper.ConvertBech32ToHex(currentChat.PartnerNpub);
                currentChat.PartnerPubKeyHex = partnerPubKey;
            }
            
            // Validate the key is in proper hex format
            if (!System.Text.RegularExpressions.Regex.IsMatch(partnerPubKey, "^[0-9a-fA-F]{64}$"))
            {
                // Clean up the key if needed
                partnerPubKey = new string(partnerPubKey.Where(c => 
                    (c >= '0' && c <= '9') || 
                    (c >= 'a' && c <= 'f') || 
                    (c >= 'A' && c <= 'F')).ToArray());
                
                // Ensure correct length
                if (partnerPubKey.Length > 64)
                    partnerPubKey = partnerPubKey.Substring(partnerPubKey.Length - 64);
                else if (partnerPubKey.Length < 64)
                    partnerPubKey = partnerPubKey.PadLeft(64, '0');
            }
            
            // Final validation check
            if (!System.Text.RegularExpressions.Regex.IsMatch(partnerPubKey, "^[0-9a-fA-F]{64}$"))
            {
                throw new Exception($"Invalid partner public key format: {partnerPubKey}");
            }

            // Encrypt the message 
            string encryptedContent = await _encryptionService.EncryptNostrContentAsync(
                currentChat.UserPrivateKeyHex,
                partnerPubKey,
                newMessage
            );

            // Send the encrypted message
            var sentMessageId = _RelayService.SendDirectMessagesForPubKeyAsync(
                currentChat.UserPrivateKeyHex,
                partnerPubKey,
                encryptedContent,
                response => Console.WriteLine($"Message send response: {(response != null ? "Success" : "No response")}")
            );

            // Add message to UI
            var sentChatMessage = new ChatMessage
            {
                Id = sentMessageId,
                Content = newMessage,
                SenderPubkey = NostrHelper.ConvertBech32ToHex(currentChat.UserNpub),
                Timestamp = DateTime.UtcNow,
                IsFromCurrentUser = true
            };

            // Clear input
            newMessage = "";

            // Add to chat messages
            chatMessages.Add(sentChatMessage);
            chatMessages = chatMessages.OrderBy(m => m.Timestamp).ToList();

            // Save the working key for future use
            currentChat.PartnerPubKeyHex = partnerPubKey;
        }
        catch (Exception ex)
        {
            notificationComponent?.ShowErrorMessage($"Failed to send message: {ex.Message}", ex);
            Console.WriteLine($"Error details: {ex}");
        }
        finally
        {
            isSendingMessage = false;
            StateHasChanged();
        }
    }

