                            var stage = project.ProjectInfo.Stages[index];
                            var daysUntilStage = (stage.ReleaseDate - currentDate).Days;
                            var amountInStage = (Money.Satoshis(projectStats.TotalRaised).ToUnit(MoneyUnit.BTC)) * stage.AmountToRelease / 100;
                            <tr>
