    <div class="card">
        <div class="row g-0">
            <div class="col-md-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <!-- Replace 'VIDEO_ID' with the actual ID of your YouTube video -->
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/VIDEO_ID" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="card-body">
                    <h5 class="card-title text-center">Welcome to Angor</h5>
                    <p class="card-text text-center">Stay in control of your investments with Angor</p>
                </div>
            </div>
        </div>
    </div>
</div>
