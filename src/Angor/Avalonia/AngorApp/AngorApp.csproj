<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets/**"/>
        <!-- Link theme-specific app icons located at the solution root to our Assets folder -->
        <AvaloniaResource Include="../angor-app-icon-light.png">
            <Link>Assets/angor-app-icon-light.png</Link>
        </AvaloniaResource>
        <AvaloniaResource Include="../angor-app-icon-dark.png">
            <Link>Assets/angor-app-icon-dark.png</Link>
        </AvaloniaResource>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AsyncImageLoader.Avalonia"/>
        <PackageReference Include="Avalonia"/>
        <PackageReference Include="Avalonia.ReactiveUI"/>
        <PackageReference Include="Avalonia.Themes.Fluent"/>
        <PackageReference Include="Avalonia.Fonts.Inter"/>
        <PackageReference Include="AvaloniaUI.DiagnosticsSupport"/>
        <PackageReference Include="CSharpFunctionalExtensions"/>
        <PackageReference Include="Humanizer.Core"/>
        <PackageReference Include="PanAndZoom"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
        <PackageReference Include="Projektanker.Icons.Avalonia.FontAwesome"/>
        <PackageReference Include="Projektanker.Icons.Avalonia.MaterialDesign"/>
        <PackageReference Include="QRCoder"/>
        <PackageReference Include="Serilog.Extensions.Logging"/>
        <PackageReference Include="Serilog.Sinks.Console"/>
        <PackageReference Include="Zafiro.Avalonia"/>
        <PackageReference Include="Zafiro.Avalonia.Generators"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Angor.Contexts.Data\Angor.Contexts.Data.csproj" />
        <ProjectReference Include="../Angor.Contexts.Integration.WalletFunding/Angor.Contexts.Integration.WalletFunding.csproj"/>
        <ProjectReference Include="../Angor.UI.Model.Implementation/Angor.UI.Model.Implementation.csproj"/>
        <ProjectReference Include="../Angor.UI.Model/Angor.UI.Model.csproj"/>
        <ProjectReference Include="../Angor.Contexts.Wallet/Angor.Contexts.Wallet.csproj"/>
        <ProjectReference Include="../Angor.Contexts.Funding/Angor.Contexts.Funding.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <AdditionalFiles Include="**/*.axaml"/>
    </ItemGroup>

    <ItemGroup>
      <None Update="AppSettings.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <PropertyGroup>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)generated</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>

</Project>
