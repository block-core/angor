<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shell="clr-namespace:AngorApp.Sections.Shell"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="AngorApp.Views.MainView"
             x:DataType="shell:MainViewModel">

    <Design.DataContext>
        <shell:MainViewModel />
    </Design.DataContext>

    <DockPanel>
        <shell:Sidebar Margin="20" />
        <!-- <ListBox DisplayMemberBinding="{Binding Name}" ItemsSource="{Binding Sections}" SelectedItem="{Binding SelectedSection}" /> -->
        <ScrollViewer>
            <ContentControl Content="{Binding SelectedSection.ViewModel}" />
        </ScrollViewer>
    </DockPanel>
</UserControl>