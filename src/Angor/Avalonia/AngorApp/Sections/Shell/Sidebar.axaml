        </Interaction.Behaviors>

        <DockPanel>
            
            <ListBox Background="Transparent" ItemsSource="{Binding Sections}" SelectedItem="{Binding SelectedSection}">
                <ListBox.ItemContainerTheme>
                    <ControlTheme TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <!-- <Setter Property="Background" Value="Transparent" /> -->
                        <Setter Property="CornerRadius" Value="10" />
                        <Setter Property="Margin" Value="8" />
                        <Setter Property="Padding" Value="8" />
                    </ControlTheme>
                </ListBox.ItemContainerTheme>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="shell:Section">
                        <DockPanel>
                            <ContentControl Margin="10 0 10 0" Content="{Binding Icon, Converter={x:Static angorApp:IconConverters.StringToIcon}}" />
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <DockPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </DockPanel.Styles>

