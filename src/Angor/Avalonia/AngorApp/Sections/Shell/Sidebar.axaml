<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:AngorApp.Views"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:controls="clr-namespace:AngorApp.Controls"
             xmlns:shell="clr-namespace:AngorApp.Sections.Shell"
             xmlns:angorApp="clr-namespace:AngorApp"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="AngorApp.Sections.Shell.Sidebar" ClipToBounds="False" x:DataType="shell:MainViewModel">
    
    <Design.DataContext>
        <shell:MainViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        </Style>
        <Style Selector="i|Icon">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="{StaticResource Level5}" />
        </Style>
        <Style Selector="controls|Pane">
            <Setter Property="Width" Value="96" />
            <Setter Property="Transitions">
                <Setter.Value>
                    <Transitions>
                        <DoubleTransition Property="Width" Duration="0:0:0.2" />
                    </Transitions>
                </Setter.Value>
            </Setter>
        </Style>
        <Style Selector="controls|Pane TextBlock">
            <Setter Property="Opacity" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource Level5}" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="controls|Pane:pointerover">
            <Setter Property="Width" Value="200" />
        </Style>
        <Style Selector="controls|Pane:pointerover TextBlock">
            <Setter Property="Opacity" Value="1" />
        </Style>
    </UserControl.Styles>

    <controls:Pane>

        <Interaction.Behaviors>
            <!-- <AdaptiveBehavior TargetControl="{Binding $parent[TopLevel]}" > -->
