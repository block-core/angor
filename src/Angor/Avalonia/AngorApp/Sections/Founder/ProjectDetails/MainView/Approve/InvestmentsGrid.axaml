<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdg="clr-namespace:Zafiro.Avalonia.Controls.SlimDataGrid;assembly=Zafiro.Avalonia"
             xmlns:controls="clr-namespace:AngorApp.UI.Controls"
             xmlns:approve="clr-namespace:AngorApp.Sections.Founder.ProjectDetails.MainView.Approve"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AngorApp.Sections.Founder.ProjectDetails.MainView.Approve.InvestmentsGrid"
             x:DataType="approve:IApproveInvestmentsViewModel">

    <Design.DataContext>
        <approve:ApproveInvestmentsViewModelDesign />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="sdg|SlimDataGrid.TopLevel sdg|Row:not(.NestedGrid sdg|Row)">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemBaseMediumLowColor}" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="Margin" Value="0 10" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Padding="{TemplateBinding Padding}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            ClipToBounds="{TemplateBinding ClipToBounds}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel>
                            <ItemsControl ItemsSource="{TemplateBinding Properties}" DockPanel.Dock="Top">
                                <ItemsControl.ItemContainerTheme>
                                    <ControlTheme TargetType="Cell" BasedOn="{StaticResource {x:Type Cell}}">
                                        <Setter Property="Grid.Column" Value="{Binding $self.Index}" />
                                    </ControlTheme>
                                </ItemsControl.ItemContainerTheme>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Grid>
                                            <Interaction.Behaviors>
                                                <BindableColumnDefinitionsBehavior
                                                    ColumnDefinitions="{Binding $parent[SlimDataGrid].Columns, Mode=OneWay, Converter={x:Static Converters.ColumnDefsConverter}}" />
                                            </Interaction.Behaviors>
                                        </Grid>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            <Card Header="Previous offers" x:DataType="approve:IInvestmentViewModel"
                                  Subheader="These are previous offers made by this investor"
                                  Background="{DynamicResource SystemListMediumColor}"
                                  IsVisible="{Binding AreDetailsShown, DataType=approve:IInvestmentViewModel}">
                                <SlimDataGrid Classes="NestedGrid" ItemsSource="{Binding OtherInvestments}">
                                    <SlimDataGrid.Styles>
                                        <Style Selector="sdg|Row">
                                            <Setter Property="Margin" Value="0 10" />
                                        </Style>
                                        <Style Selector="sdg|Cell TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </SlimDataGrid.Styles>
                                    <SlimDataGrid.Columns>
                                        <Column Header="Amount" Width="*" Binding="{Binding Amount.BtcString}" />
                                        <Column Header="Date" Width="*" Binding="{Binding CreatedOn, Converter={x:Static controls:AngorConverters.HumanizeDateTime}}" />
                                        <Column Header="" Width="150" Binding="{Binding InvestorNostrPubKey}">
                                            <Column.CellTemplate>
                                                <DataTemplate>
                                                </DataTemplate>
                                            </Column.CellTemplate>
                                        </Column>
                                        <Column Header="Status" Width="Auto" Binding="{Binding Status}">
                                            <Column.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Tag="{Binding}">
                                                        <TextBlock.Styles>
                                                            <Style Selector="TextBlock[Tag=PendingFounderSignatures]">
                                                                <Setter Property="Text" Value="Pending" />
                                                            </Style>
                                                            <Style Selector="TextBlock[Tag=FounderSignaturesReceived]">
                                                                <Setter Property="Text" Value="Approved" />
                                                            </Style>
                                                            <Style Selector="TextBlock[Tag=Invested]">
                                                                <Setter Property="Text" Value="Invested" />
                                                            </Style>
                                                        </TextBlock.Styles>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </Column.CellTemplate>
                                        </Column>
                                    </SlimDataGrid.Columns>
                                </SlimDataGrid>
                            </Card>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>

    </UserControl.Styles>

    <SlimDataGrid Classes="TopLevel" ItemsSource="{Binding Investments}">
        <SlimDataGrid.Styles>
            <Style Selector="sdg|Cell TextBlock">
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </SlimDataGrid.Styles>
        <SlimDataGrid.Columns>
            <Column Header="Amount" Width="*" Binding="{Binding MostRecentInvestment.Amount.BtcString}" />
            <Column Header="Date" Width="*" Binding="{Binding MostRecentInvestment.CreatedOn, Converter={x:Static controls:AngorConverters.HumanizeDateTime}}" />
            <Column Header="Investor" Width="150" Binding="{Binding MostRecentInvestment.InvestorNostrPubKey}">
                <Column.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </Column.CellTemplate>
            </Column>
            <Column Header="Status" Width="Auto" Binding="{Binding MostRecentInvestment.Status}">
                <Column.CellTemplate>
                    <DataTemplate>
                        <TextBlock Tag="{Binding}">
                            <TextBlock.Styles>
                                <Style Selector="TextBlock[Tag=PendingFounderSignatures]">
                                    <Setter Property="Text" Value="Pending" />
                                </Style>
                                <Style Selector="TextBlock[Tag=FounderSignaturesReceived]">
                                    <Setter Property="Text" Value="Approved" />
                                </Style>
                                <Style Selector="TextBlock[Tag=Invested]">
                                    <Setter Property="Text" Value="Invested" />
                                </Style>
                            </TextBlock.Styles>
                        </TextBlock>
                    </DataTemplate>
                </Column.CellTemplate>
            </Column>
            <Column Header="" Width="Auto" Binding="{Binding}">
                <Column.CellTemplate>
                    <DataTemplate>
                        <Button Command="{Binding Approve}"
                                IsVisible="{Binding $self.IsEffectivelyEnabled}"
                                Content="Approve" />
                    </DataTemplate>
                </Column.CellTemplate>
            </Column>
            <Column Width="Auto" Binding="{Binding }">
                <Column.CellTemplate>
                    <DataTemplate>
                        <ToggleButton Theme="{StaticResource ExpandingToggleButtonNoText}" x:Name="AreDetailsShown" IsChecked="{Binding AreDetailsShown, Mode=TwoWay}" Margin="10"
                                      IsVisible="{Binding OtherInvestments, Converter={x:Static Enumerable.Any}}" />
                    </DataTemplate>
                </Column.CellTemplate>
            </Column>
        </SlimDataGrid.Columns>
    </SlimDataGrid>

</UserControl>