<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Card Padding="20" Header="Header" Subheader="Subheader">
            <Card Header="Header" Content="CONTENT" Subheader="Subheader" />
        </Card>
    </Design.PreviewWith>
    
    <Style Selector="CalendarDatePicker">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
    
    <Style Selector="Card">
        <Setter Property="Theme" Value="{StaticResource  WideCard}" />
    </Style>
    
    <Style Selector="StackPanel Card">
        <Setter Property="Padding" Value="10" />
    </Style>
    
    <Styles.Resources>
        <SolidColorBrush x:Key="SystemControlErrorTextForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
    </Styles.Resources>
    
</Styles>
