<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:controls="clr-namespace:AngorApp.UI.Controls"
             xmlns:collections="clr-namespace:System.Collections;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="700"
             x:Class="AngorApp.Sections.Founder.CreateProject.ProfileView">
    <Card Header="Project Profile">
        <Card.HeaderStartContent>
            <ui:Icon Source="fa-briefcase" />
        </Card.HeaderStartContent>
        <StackPanel Spacing="20">
            <controls:CardGrid>
                <controls:CardGrid.ItemsSource>
                    <collections:ArrayList>
                        <HeaderedContainer Header="Project Name">
                            <TextBox Watermark="Enter the name of your project" />
                        </HeaderedContainer>
                        <HeaderedContainer Header="Project Website">
                            <TextBox Watermark="Enter the URL of project website" />
                        </HeaderedContainer>
                    </collections:ArrayList>
                </controls:CardGrid.ItemsSource>
            </controls:CardGrid>
            <HeaderedContainer Header="About Your Project">
                <TextBox MinLines="6" Watermark="Provide a brief description of the project" />
            </HeaderedContainer>
            <Card Margin="0" Padding="0 5 0 0" HeaderPadding=" 0 0 0 5" Header="Visual Identity" Theme="{StaticResource TransparentCard}">
                <controls:CardGrid>
                    <controls:CardGrid.ItemsSource>
                        <collections:ArrayList>
                            <HeaderedContainer Header="Banner Image URL">
                                <StackPanel Spacing="5">
                                    <TextBox Watermark="Enter the URL for the project banner image" />
                                    <TextBlock Classes="Dimmed">Recommended size: 820×312px</TextBlock>
                                </StackPanel>
                            </HeaderedContainer>
                            <HeaderedContainer Header="Avatar Image Url">
                                <StackPanel>
                                    <TextBox Watermark="Enter the URL for the project logo or profile picture" />
                                    <TextBlock Classes="Dimmed">Recommended size: 170×170px</TextBlock>
                                </StackPanel>
                            </HeaderedContainer>
                        </collections:ArrayList>
                    </controls:CardGrid.ItemsSource>
                </controls:CardGrid>
            </Card>
        </StackPanel>
    </Card>
</UserControl>