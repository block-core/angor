<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:profile="clr-namespace:AngorApp.Sections.Founder.CreateProject.Profile"
             xmlns:controls="clr-namespace:AngorApp.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="400"
             x:Class="AngorApp.Sections.Founder.CreateProject.Profile.ProfileView"
             x:DataType="profile:IProfileViewModel">

    <UserControl.Styles>
        <StyleInclude Source="../Common.axaml" />
    </UserControl.Styles>

    <Card Header="Project Profile" HeaderStartContent="{Icon fa-briefcase}">
        <Card.HeaderEndContent>
            <controls:ErrorSummary Errors="{Binding Errors}" />
        </Card.HeaderEndContent>
        <StackPanel Classes="BigGap">
            <BalancedWrapGrid MinItemWidth="200">
                <HeaderedContainer Header="Project Name" Classes="Transparent">
                    <TextBox Watermark="Enter the name of your project" Text="{Binding ProjectName}" />
                </HeaderedContainer>
                <HeaderedContainer Header="Project Website" Classes="Transparent">
                    <TextBox TextInputOptions.ContentType="Url" Watermark="Enter the URL of project website" Text="{Binding WebsiteUri}" />
                </HeaderedContainer>
            </BalancedWrapGrid>
            <HeaderedContainer Header="About Your Project" Classes="Transparent">
                <TextBox MinLines="6" MaxLength="1000" TextInputOptions.Multiline="True" Watermark="Provide a brief description of the project" Text="{Binding Description}" />
            </HeaderedContainer>
            <HeaderedContainer Header="Visual Identity" Classes="Transparent">
                <BalancedWrapGrid MinItemWidth="250">
                    <HeaderedContainer Header="Banner Image URL">
                        <StackPanel Spacing="5">
                            <TextBox TextInputOptions.ContentType="Url" Watermark="Project banner image URL" Text="{Binding BannerUri}" />
                            <TextBlock Classes="Dimmed">Recommended size: 820×312px</TextBlock>
                        </StackPanel>
                    </HeaderedContainer>
                    <HeaderedContainer Header="Avatar Image URL">
                        <StackPanel Spacing="5">
                            <TextBox TextInputOptions.ContentType="Url" Watermark="Project logo or profile URL" Text="{Binding AvatarUri}" />
                            <TextBlock Classes="Dimmed">Recommended size: 170×170px</TextBlock>
                        </StackPanel>
                    </HeaderedContainer>
                </BalancedWrapGrid>
            </HeaderedContainer>
            <ToggleSwitch x:Name="AdvancedSwitch">Show advanced settings</ToggleSwitch>
            <StackPanel Classes="BigGap" IsVisible="{Binding #AdvancedSwitch.IsChecked}">
                <HeaderedContainer Header="Nostr Identifier Protocol 05" >
                    <TextBox Watermark="name@domain.com" Text="{Binding Nip05Username}" />
                </HeaderedContainer>
                <HeaderedContainer Header="Lightning URL">
                    <TextBox Watermark="alice@wallet.com" Text="{Binding LightningAddress}" />
                </HeaderedContainer>
            </StackPanel>
        </StackPanel>
    </Card>
</UserControl>