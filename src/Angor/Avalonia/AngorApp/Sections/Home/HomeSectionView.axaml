<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:home="clr-namespace:AngorApp.Sections.Home"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:a="clr-namespace:AngorApp.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="600"
             x:Class="AngorApp.Sections.Home.HomeSectionView" x:DataType="home:IHomeSectionViewModel">

    <Design.DataContext>
        <home:HomeSectionViewModelDesign IsWalletSetup="False" />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Styles>

    <a:PageContainer>
        <ScrollViewer>
            <StackPanel MaxWidth="1200" VerticalAlignment="Center" Classes="BigGap">
                <Card Theme="{StaticResource BigCard}"
                      Padding="50"
                      Header="Welcome to Angor"
                      HeaderAndBodySpacing="20"
                      Subheader="A P2P funding protocol built on Bitcoin and Nostr">
                    <Card.HeaderStartContent>
                        <ui:Icon Source="svg:/Assets/angor-icon.svg" />
                    </Card.HeaderStartContent>
                    <UniformGrid Rows="1" HorizontalAlignment="Center" ColumnSpacing="20">
                        <Button Command="{Binding GoToSection}" CommandParameter="Wallet">Get Started</Button>
                        <Button Command="{Binding OpenHub}">Learn More</Button>
                    </UniformGrid>
                </Card>
                <BalancedWrapGrid MinItemWidth="200" HorizontalSpacing="20" VerticalSpacing="20">
                    <Card Theme="{StaticResource SmallCard}" Header="Create your wallet" Subheader="Create a new wallet or recover your existing one to get started with Angor">
                        <Card.HeaderStartContent>
                            <ui:Icon Source="svg:/Assets/wallet.svg" />
                        </Card.HeaderStartContent>
                        <Interaction.Behaviors>
                            <TappedEventTrigger>
                                <InvokeCommandAction Command="{Binding GoToSection}" CommandParameter="Wallet" />
                            </TappedEventTrigger>
                        </Interaction.Behaviors>
                    </Card>
                    <Card Theme="{StaticResource SmallCard}" Header="Explore Opportunities" Subheader="Browse through innovative projects and find your next investment">
                        <Card.HeaderStartContent>
                            <ui:Icon Source="svg:/Assets/browse.svg" />
                        </Card.HeaderStartContent>
                        <Interaction.Behaviors>
                            <TappedEventTrigger>
                                <InvokeCommandAction Command="{Binding GoToSection}" CommandParameter="Browse" />
                            </TappedEventTrigger>
                        </Interaction.Behaviors>
                    </Card>
                    <Card Theme="{StaticResource SmallCard}" Header="Launch Your Project" Subheader="Start your fundraising journey and launch your project on Angor">
                        <Card.HeaderStartContent>
                            <ui:Icon Source="svg:/Assets/user.svg" />
                        </Card.HeaderStartContent>
                        <Interaction.Behaviors>
                            <TappedEventTrigger>
                                <InvokeCommandAction Command="{Binding GoToSection}" CommandParameter="Founder" />
                            </TappedEventTrigger>
                        </Interaction.Behaviors>
                    </Card>
                    <Card Theme="{StaticResource SmallCard}" Header="Invest &amp; Grow" Subheader="Invest in promising projects and be part of their success story">
                        <Card.HeaderStartContent>
                            <ui:Icon Source="svg:/Assets/portfolio.svg" />
                        </Card.HeaderStartContent>
                        <Interaction.Behaviors>
                            <TappedEventTrigger>
                                <InvokeCommandAction Command="{Binding GoToSection}" CommandParameter="Portfolio" />
                            </TappedEventTrigger>
                        </Interaction.Behaviors>
                    </Card>
                </BalancedWrapGrid>
                <Card Header="The Angor Flow">
                    <Card.HeaderTheme>
                        <ControlTheme TargetType="TemplatedControl">
                            <Setter Property="FontSize" Value="{StaticResource FontSizeBig}" />
                        </ControlTheme>
                    </Card.HeaderTheme>
                    <Card.Resources>
                        <ControlTemplate x:Key="Mobile">
                            <StackPanel Classes="SmallGap">
                                <Image RenderOptions.BitmapInterpolationMode="None" Source="/Assets/flow.png" />
                                <EdgePanel Content="Tap to see" VerticalAlignment="Top" HorizontalAlignment="Right">
                                    <EdgePanel.StartContent>
                                        <ui:Icon Source="fa-magnifying-glass" />
                                    </EdgePanel.StartContent>
                                </EdgePanel>
                                <Interaction.Behaviors>
                                    <TappedEventTrigger>
                                        <InvokeCommandAction Command="{Binding GoToAngorFlow}" />
                                    </TappedEventTrigger>
                                </Interaction.Behaviors>
                            </StackPanel>
                        </ControlTemplate>
                        <ControlTemplate x:Key="Desktop">
                            <Svg MaxWidth="800" Path="/Assets/flow.svg" />
                        </ControlTemplate>
                    </Card.Resources>
                    <ContentControl Template="{OnFormFactor Mobile={StaticResource Mobile}, Default={StaticResource Desktop}}" />
                </Card>
            </StackPanel>
        </ScrollViewer>
    </a:PageContainer>

</UserControl>