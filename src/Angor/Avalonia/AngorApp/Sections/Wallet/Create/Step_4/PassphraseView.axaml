             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AngorApp.Sections.Wallet.Create.Step_4.PassphraseView"
             x:DataType="step4:IPassphraseViewModel">
    <StackPanel Spacing="20">
        <TextBlock TextWrapping="Wrap">You may set an additional passphrase for extra security. It will be combined with your 12 seed words to derive your walletâ€™s master key.</TextBlock>
