<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:controls="clr-namespace:AngorApp.UI.Controls"
             xmlns:model="clr-namespace:Angor.UI.Model;assembly=Angor.UI.Model"
             xmlns:simple="clr-namespace:Angor.UI.Model.Implementation.Wallet.Simple;assembly=Angor.UI.Model.Implementation"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="AngorApp.Sections.Wallet.Main.HistoryView"
             x:DataType="simple:SimpleWallet">

    <Loading LoadingText="Loading Transaction History" IsLoading="{Binding Load.IsExecuting^}">
        <SlimDataGrid ItemsSource="{Binding History}" Empty.Content="No transactions found">
            <SlimDataGrid.Styles>
                <Style Selector="TextBlock">
                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                    <Setter Property="ToolTip.Tip" Value="{Binding $self.Text}" />
                </Style>
            </SlimDataGrid.Styles>
            <SlimDataGrid.Columns>
                <Column Width="Auto" Binding="{Binding Balance}">
                    <Column.CellTemplate>
                        <DataTemplate DataType="model:IAmountUI">
                            <Panel HorizontalAlignment="Left" Margin="0 0 10 0">
                                <i:Icon Foreground="Green" IsVisible="{Binding IsPositive}" Value="fa-chevron-up" />
                                <i:Icon IsVisible="{Binding IsZero}" Value="fa-grip-lines" />
                                <i:Icon Foreground="Red" IsVisible="{Binding IsNegative}" Value="fa-chevron-down" />
                            </Panel>
                        </DataTemplate>
                    </Column.CellTemplate>
                </Column>
                <Column Header="Amount" Width="Auto" Binding="{Binding Balance.BtcString}" />
                <Column Header="Date" Width="*" Binding="{Binding BlockTime, Converter={x:Static controls:AngorConverters.HumanizeDateTimeOffset}}" />
                <Column Header="TXN" Width="Auto" Binding="{Binding RawJson}">
                    <Column.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock x:DataType="x:Object" TextAlignment="Center" Text="{Binding}" />
                        </DataTemplate>
                    </Column.HeaderTemplate>
                    <Column.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding}"
                                    i:Attached.Icon="fa-solid fa-ellipsis" />
                        </DataTemplate>
                    </Column.CellTemplate>
                </Column>
            </SlimDataGrid.Columns>
        </SlimDataGrid>
    </Loading>

</UserControl>