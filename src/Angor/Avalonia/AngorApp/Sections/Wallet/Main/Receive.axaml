<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:Zafiro.Avalonia.Controls;assembly=Zafiro.Avalonia"
             xmlns:controls="clr-namespace:AngorApp.UI.Controls"
             xmlns:simple="clr-namespace:AngorApp.Model.Domain.Wallet;assembly=AngorApp.Model"
             mc:Ignorable="d" d:DesignWidth="400"
             x:Class="AngorApp.Sections.Wallet.Main.Receive" x:DataType="simple:SimpleWallet">

    <Interaction.Behaviors>
        <LoadedTrigger>
            <InvokeCommandAction Command="{Binding GetReceiveAddress}" />
        </LoadedTrigger>
    </Interaction.Behaviors>

    <c:Loading IsLoading="{Binding GetReceiveAddress.IsExecuting^}">
        
        <StackPanel>
            <OverlayBorder Theme="{StaticResource CardOverlayBorder}">
                <StackPanel Spacing="10">
                    <TextBlock>Use this address the receive bitcoin in this wallet:</TextBlock>
                    <c:EdgePanel>
                        <c:EdgePanel.Content>
                            <TextBox VerticalAlignment="Center" IsReadOnly="True" Text="{Binding ReceiveAddress^}" TextAlignment="Center" />
                        </c:EdgePanel.Content>
                        <c:EdgePanel.StartContent>
                            <Svg Path="/Assets/bitcoin.svg" Margin="10 0" Height="30" Width="30" />
                        </c:EdgePanel.StartContent>
                        <c:EdgePanel.EndContent>
                            <Button Margin="10 0" CommandParameter="{Binding ReceiveAddress^}"
                                    Content="{Icon fa-copy}"
                                    IconOptions.Size="{StaticResource IconSizeSmall}"
                                    Command="{Binding Source={x:Static Commands.Instance}, Path=CopyText}">
                            </Button>
                        </c:EdgePanel.EndContent>
                    </c:EdgePanel>
                </StackPanel>
            </OverlayBorder>
        
            <Image Width="300" Height="300"
                   Source="{Binding Path=ReceiveAddress^, Converter={x:Static controls:AngorConverters.StringToQRCode}}" />
        </StackPanel>
    </c:Loading>
</UserControl>