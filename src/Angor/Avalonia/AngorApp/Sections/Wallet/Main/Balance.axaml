<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:simple="clr-namespace:Angor.UI.Model.Implementation.Wallet.Simple;assembly=Angor.UI.Model.Implementation"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="AngorApp.Sections.Wallet.Main.Balance" x:DataType="simple:SimpleWallet">
    
    <Card Theme="{StaticResource WideCard}">
        <Card.Header>
            <Panel>
                <TextBlock IsVisible="{Binding !Load.IsExecuting^}" Text="{Binding Balance.DecimalString}" />
                <ProgressBar HorizontalAlignment="Left" MaxWidth="120" IsIndeterminate="True" IsVisible="{Binding Load.IsExecuting^}" />
            </Panel>
        </Card.Header>
        <Card.HeaderStartContent>
            <ui:Icon Source="fa-database" />
        </Card.HeaderStartContent>
    </Card>

</UserControl>
