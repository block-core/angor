<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:penalties="clr-namespace:AngorApp.Sections.Portfolio.Penalties"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:a="clr-namespace:AngorApp.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="600"
             x:Class="AngorApp.Sections.Portfolio.Recover.RecoverView" x:DataType="penalties:IPenaltiesViewModel">

    <Design.DataContext>
        <penalties:PenaltiesViewModelDesign />
    </Design.DataContext>
    
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Styles>

    <a:PageContainer>
        <DockPanel>
            <Card DockPanel.Dock="Top" Header="Recovery" IsAdaptiveFlowEnabled="True" Subheader="Manage and monitor recovery stages for your project">
                <Card.HeaderStartContent>
                    <ui:Icon Source="svg:/Assets/recovery.svg" />
                </Card.HeaderStartContent>
                <Card.HeaderEndContent>
                    <UniformGrid ColumnSpacing="20" Rows="1">
                        <IconButton HorizontalAlignment="Stretch">
                            Refresh
                            <IconButton.Icon>
                                <ui:Icon Source="fa-arrows-rotate" />
                            </IconButton.Icon>
                        </IconButton>
                        <IconButton HorizontalAlignment="Stretch">
                            Pending Message
                            <IconButton.Icon>
                                <ui:Icon Source="fa-message" />
                            </IconButton.Icon>
                        </IconButton>
                    </UniformGrid>
                </Card.HeaderEndContent>
            </Card>

            <Loading LoadingText="Loading recover...">
                <StackPanel HorizontalAlignment="Stretch" Spacing="20">
                    <TextBlock Text="Recovery Details" FontWeight="Bold" FontSize="20" Margin="0,10,0,10"/>
                    <!-- Project ID Box -->
                    <Border Background="#14343C" CornerRadius="10" Padding="16" Margin="0,0,0,0" HorizontalAlignment="Stretch">
                        <TextBlock Text="Project ID: angor1quyhgedvff22h2fmjc3lwvlruxx6xv76gzptm50" FontSize="16" Foreground="#B0BEC5"/>
                    </Border>
                    <!-- Info Cards -->
                    <UniformGrid Columns="2" Rows="2" ColumnSpacing="20" RowSpacing="20" Margin="0,10,0,0">
                        <Border Background="#14343C" CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Total Funds" Foreground="#B0BEC5" FontSize="14"/>
                                <TextBlock Text="0 TBTC" FontSize="28" FontWeight="Bold" />
                            </StackPanel>
                        </Border>
                        <Border Background="#14343C" CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Expiry Date" Foreground="#B0BEC5" FontSize="14"/>
                                <TextBlock Text="05/09/2025" FontSize="28" FontWeight="Bold" />
                            </StackPanel>
                        </Border>
                        <Border Background="#14343C" CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Penalty Period" Foreground="#B0BEC5" FontSize="14"/>
                                <TextBlock Text="90 days" FontSize="28" FontWeight="Bold" />
                            </StackPanel>
                        </Border>
                        <Border Background="#14343C" CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Transaction" Foreground="#B0BEC5" FontSize="14"/>
                                <Button Content="View" Width="80" Height="36" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    <!-- Table -->
                    <Border Background="#14343C" CornerRadius="10" Padding="20" HorizontalAlignment="Stretch">
                        <StackPanel>
                            <!-- Table Header -->
                            <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                                <TextBlock Text="STAGE" Foreground="#B0BEC5" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Text="AMOUNT" Foreground="#B0BEC5" FontWeight="Bold" Grid.Column="1" VerticalAlignment="Center"/>
                                <TextBlock Text="STATUS" Foreground="#B0BEC5" FontWeight="Bold" Grid.Column="2" VerticalAlignment="Center"/>
                            </Grid>
                            <Border BorderBrush="#22505A" BorderThickness="1"/>
                            <!-- Table Rows (Static Example) -->
                            <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,10,0,10" HorizontalAlignment="Stretch">
                                <TextBlock Text="1" VerticalAlignment="Center"/>
                                <TextBlock Text="0.1 TBTC" Grid.Column="1" VerticalAlignment="Center"/>
                                <Button Grid.Column="2"
                                        Background="#7B883A"
                                        Foreground="White"
                                        Padding="10,2"
                                        CornerRadius="6"
                                        BorderThickness="0">
                                    Penalty, released in 89.9 days
                                </Button>
                            </Grid>
                            <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                                <TextBlock Text="2" VerticalAlignment="Center"/>
                                <TextBlock Text="0.3 TBTC" Grid.Column="1" VerticalAlignment="Center"/>
                                <Button Grid.Column="2"
                                        Background="#7B883A"
                                        Foreground="White"
                                        Padding="10,2"
                                        CornerRadius="6"
                                        BorderThickness="0">
                                    Penalty, released in 89.9 days
                                </Button>
                            </Grid>
                            <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,0,0,0" HorizontalAlignment="Stretch">
                                <TextBlock Text="3" VerticalAlignment="Center"/>
                                <TextBlock Text="0.6 TBTC" Grid.Column="1" VerticalAlignment="Center"/>
                                <Button Grid.Column="2"
                                        Background="#7B883A"
                                        Foreground="White"
                                        Padding="10,2"
                                        CornerRadius="6"
                                        BorderThickness="0">
                                    Penalty, released in 89.9 days
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Loading>
        </DockPanel>
    </a:PageContainer>
</UserControl>
