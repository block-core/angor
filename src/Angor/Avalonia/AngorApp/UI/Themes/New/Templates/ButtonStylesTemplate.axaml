<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia">

    <StyleInclude Source="NewTheme.LocalOnly.axaml" />

    <Style Selector="WrapPanel">
        <Setter Property="ItemSpacing" Value="12" />
    </Style>
    
    <Design.PreviewWith>
        <WrapPanel ItemWidth="620">
            <ThemeVariantScope RequestedThemeVariant="Light">
                <Border Padding="24" Background="{DynamicResource AppBackground}">
                    <StackPanel Spacing="16">
                        <TextBlock Classes="Title">Buttons</TextBlock>
                        <TextBlock Classes="Subtitle">NewTheme (local-only) â€“ style classes</TextBlock>

                        <Border Classes="Panel">
                            <StackPanel Spacing="16">
                                <TextBlock Classes="Header">EnhancedButton</TextBlock>
                                <WrapPanel>
                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Default</TextBlock>
                                        <EnhancedButton Content="Primary (default)" />
                                        <EnhancedButton Content="Primary (disabled)" IsEnabled="False" />
                                    </StackPanel>

                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Accent</TextBlock>
                                        <EnhancedButton Content="Accent" Classes="Accent" />
                                        <EnhancedButton Content="Accent (disabled)" Classes="Accent" IsEnabled="False" />
                                    </StackPanel>

                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Secondary</TextBlock>
                                        <EnhancedButton Content="Secondary" Classes="Secondary" />
                                        <EnhancedButton Content="Secondary (disabled)" Classes="Secondary" IsEnabled="False" />
                                    </StackPanel>

                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Outline</TextBlock>
                                        <EnhancedButton Content="Outline" Classes="Outline" />
                                        <EnhancedButton Content="Outline (disabled)" Classes="Outline" IsEnabled="False" />
                                    </StackPanel>
                                </WrapPanel>

                                <TextBlock Classes="Header">ToggleButton</TextBlock>
                                <WrapPanel>
                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Widget (unchecked)</TextBlock>
                                        <ToggleButton Classes="Widget">
                                            <PathIcon Foreground="{DynamicResource TextMuted}" Data="{DynamicResource Sun}" />
                                        </ToggleButton>
                                    </StackPanel>

                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Widget (checked)</TextBlock>
                                        <ToggleButton Classes="Widget" IsChecked="True">
                                            <PathIcon Foreground="{DynamicResource TextMuted}" Data="{DynamicResource Sun}" />
                                        </ToggleButton>
                                    </StackPanel>

                                    <StackPanel Spacing="6">
                                        <TextBlock Classes="Strong">Widget (disabled)</TextBlock>
                                        <ToggleButton Classes="Widget" IsEnabled="False">
                                            <PathIcon Foreground="{DynamicResource TextMuted}" Data="{DynamicResource Sun}" />
                                        </ToggleButton>
                                    </StackPanel>
                                </WrapPanel>

                                <TextBlock Classes="Header">ProgressRing</TextBlock>
                                <controls:ProgressRing Width="32" Height="32" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </ThemeVariantScope>

            <ThemeVariantScope RequestedThemeVariant="Dark">
                <Border Padding="24" Background="{DynamicResource AppBackground}">
                    <StackPanel Spacing="16">
                        <TextBlock Classes="Title">Buttons</TextBlock>
                        <TextBlock Classes="Subtitle">Dark variant preview</TextBlock>

                        <Border Classes="Panel">
                            <StackPanel Spacing="12">
                                <WrapPanel>
                                    <EnhancedButton Content="Primary" />
                                    <EnhancedButton Content="Accent" Classes="Accent" />
                                    <EnhancedButton Content="Secondary" Classes="Secondary" />
                                    <EnhancedButton Content="Outline" Classes="Outline" />
                                    <ToggleButton Classes="Widget" IsChecked="True">
                                        <PathIcon Foreground="{DynamicResource TextMuted}" Data="{DynamicResource Sun}" />
                                    </ToggleButton>
                                </WrapPanel>
                                <controls:ProgressRing Width="32" Height="32" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </ThemeVariantScope>
        </WrapPanel>
    </Design.PreviewWith>
</Styles>
