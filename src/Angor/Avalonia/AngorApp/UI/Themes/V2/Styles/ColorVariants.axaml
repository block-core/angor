<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>

        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="Yellow.BorderBrush">#fef08a</SolidColorBrush>
                    <SolidColorBrush x:Key="Yellow.Background">#FEFCE8</SolidColorBrush>
                    <SolidColorBrush x:Key="Apricot.BorderBrush">#fed7aa</SolidColorBrush>
                    <SolidColorBrush x:Key="Apricot.Background">#fff7ed</SolidColorBrush>
                    <SolidColorBrush x:Key="LightGray.BorderBrush">#E5E7EB</SolidColorBrush>
                    <SolidColorBrush x:Key="LightGray.Background">#F9FAFB</SolidColorBrush>
                    <SolidColorBrush x:Key="ApricotGradient.BorderBrush">#fed7aa</SolidColorBrush>
                    <LinearGradientBrush x:Key="ApricotGradient.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#fff7ed" />
                        <GradientStop Offset="1" Color="#fef3c7" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="Green.BorderBrush">#86EFAC</SolidColorBrush>
                    <SolidColorBrush x:Key="Green.Background">#F0FDF4</SolidColorBrush>
                    <SolidColorBrush x:Key="Amber.IconFill">#d97706</SolidColorBrush>
                    <SolidColorBrush x:Key="Amber.BorderBrush">#fef3c7</SolidColorBrush>
                    <SolidColorBrush x:Key="Amber.Background">#fef3c7</SolidColorBrush>
                    <SolidColorBrush x:Key="DarkGreen.BorderBrush">#e5e7eb</SolidColorBrush>
                    <LinearGradientBrush x:Key="DarkGreen.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#2d5a3d" />
                        <GradientStop Offset="1" Color="#4a8f5f" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="White.BorderBrush">#e5e7eb</SolidColorBrush>
                    <SolidColorBrush x:Key="White.Background">White</SolidColorBrush>
                    <SolidColorBrush x:Key="ApricotBorder.BorderBrush">#66FDBA74</SolidColorBrush>
                    <SolidColorBrush x:Key="ApricotBorder.Background">White</SolidColorBrush>
                    <SolidColorBrush x:Key="Silver.BorderBrush" Color="#e5e7eb" />
                    <LinearGradientBrush x:Key="Silver.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#f9fafb" />
                        <GradientStop Offset="1" Color="#f3f4f6" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="Blue.BorderBrush" Color="#bfdbfe" />
                    <LinearGradientBrush x:Key="Blue.Background" StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#eff6ff" />
                        <GradientStop Offset="1" Color="#e0e7ff" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="GreenBorder.Background">#b3ffffff</SolidColorBrush>
                    <SolidColorBrush x:Key="GreenBorder.BorderBrush">#4d4b7c5a</SolidColorBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="Yellow.BorderBrush">#1Afef08a</SolidColorBrush>
                    <SolidColorBrush x:Key="Yellow.Background">#1AFEFCE8</SolidColorBrush>
                    <SolidColorBrush x:Key="Apricot.BorderBrush">#4dEA580C</SolidColorBrush>
                    <LinearGradientBrush x:Key="Apricot.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#26ea580c" />
                        <GradientStop Offset="1" Color="#26fbbf24" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="LightGray.BorderBrush">#404040</SolidColorBrush>
                    <SolidColorBrush x:Key="LightGray.Background">#0A0A0A</SolidColorBrush>
                    <SolidColorBrush x:Key="ApricotGradient.BorderBrush">#4dea580c</SolidColorBrush>
                    <LinearGradientBrush x:Key="ApricotGradient.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#26ea580c" />
                        <GradientStop Offset="1" Color="#26fbbf24" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="Green.BorderBrush">#1A86EFAC</SolidColorBrush>
                    <SolidColorBrush x:Key="Green.Background">#1AF0FDF4</SolidColorBrush>
                    <SolidColorBrush x:Key="Amber.IconFill">#d97706</SolidColorBrush>
                    <SolidColorBrush x:Key="Amber.BorderBrush">#1Afef3c7</SolidColorBrush>
                    <SolidColorBrush x:Key="Amber.Background">#1Afef3c7</SolidColorBrush>
                    <SolidColorBrush x:Key="DarkGreen.BorderBrush">#e5e7eb</SolidColorBrush>
                    <LinearGradientBrush x:Key="DarkGreen.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#2d5a3d" />
                        <GradientStop Offset="1" Color="#4a8f5f" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="White.BorderBrush">#333333</SolidColorBrush>
                    <SolidColorBrush x:Key="White.Background">#1a1a1a</SolidColorBrush>
                    <SolidColorBrush x:Key="ApricotBorder.BorderBrush">#4DEA580C</SolidColorBrush>
                    <SolidColorBrush x:Key="ApricotBorder.Background">#B32A2A2A</SolidColorBrush>
                    <SolidColorBrush x:Key="Silver.BorderBrush" Color="#333" />
                    <LinearGradientBrush x:Key="Silver.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#1a1a1a" />
                        <GradientStop Offset="1" Color="#0f0f0f" />
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="Blue.BorderBrush" Color="#4a5a6a" />
                    <LinearGradientBrush x:Key="Blue.Background" StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#1A2A3A" />
                        <GradientStop Offset="1" Color="#2A1A3A" />
                    </LinearGradientBrush>

                    <SolidColorBrush x:Key="GreenBorder.BorderBrush">#4d4b7c5a</SolidColorBrush>
                    <LinearGradientBrush x:Key="GreenBorder.Background" StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#264b7c5a" />
                        <GradientStop Offset="1" Color="#263d6448" />
                    </LinearGradientBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- Base structural properties - add ColorPanel class alongside any color variant -->
    <Style Selector=":is(Control).ColorPanel">
        <Setter Property="Border.CornerRadius" Value="16" />
        <Setter Property="Border.BorderThickness" Value="1" />
        <Setter Property="Border.Padding" Value="24" />
    </Style>

    <!-- Yellow -->
    <Style Selector=":is(Control).Yellow">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Yellow.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource Yellow.Background}" />
    </Style>

    <!-- Apricot -->
    <Style Selector=":is(Control).Apricot">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Apricot.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource Apricot.Background}" />
    </Style>

    <!-- ApricotGradient -->
    <Style Selector=":is(Control).ApricotGradient">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource ApricotGradient.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource ApricotGradient.Background}" />
    </Style>

    <!-- LightGray -->
    <Style Selector=":is(Control).LightGray">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource LightGray.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource LightGray.Background}" />
    </Style>

    <!-- Green -->
    <Style Selector=":is(Control).Green">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Green.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource Green.Background}" />
        <Setter Property="IconOptions.Fill" Value="{DynamicResource Brand}" />
    </Style>

    <!-- Amber -->
    <Style Selector=":is(Control).Amber">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Amber.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource Amber.Background}" />
        <Setter Property="IconOptions.Fill" Value="{DynamicResource Amber.IconFill}" />
    </Style>

    <!-- DarkGreen -->
    <Style Selector=":is(Control).DarkGreen">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource DarkGreen.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource DarkGreen.Background}" />
        <Setter Property="TemplatedControl.Foreground" Value="White" />
    </Style>

    <!-- White -->
    <Style Selector=":is(Control).White">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource White.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource White.Background}" />
    </Style>

    <!-- ApricotBorder -->
    <Style Selector=":is(Control).ApricotBorder">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource ApricotBorder.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource ApricotBorder.Background}" />
    </Style>
    
    <Style Selector=":is(Control).ThickBorder">
        <Setter Property="Border.BorderThickness" Value="2" />
    </Style>

    <!-- Silver -->
    <Style Selector=":is(Control).Silver">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Silver.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource Silver.Background}" />
    </Style>

    <!-- AccentWash -->
    <Style Selector=":is(Control).AccentWash">
        <Setter Property="Border.Background" Value="{DynamicResource BrandWash}" />
    </Style>
    
    <!-- Theme-based variants (use global theme resources) -->
    <Style Selector=":is(Control).Accent">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Accent}" />
        <Setter Property="Border.Background" Value="{DynamicResource BrandWash}" />
        <Setter Property="TemplatedControl.Foreground" Value="{DynamicResource Accent}" />
    </Style>

    <Style Selector=":is(Control).Bitcoin">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource BitcoinAccent}" />
        <Setter Property="Border.Background" Value="{DynamicResource BitcoinWash}" />
        <Setter Property="TemplatedControl.Foreground" Value="{DynamicResource BitcoinAccent}" />
    </Style>

    <Style Selector=":is(Control).Neutral">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Stroke}" />
        <Setter Property="Border.Background" Value="{DynamicResource Surface}" />
        <Setter Property="TemplatedControl.Foreground" Value="{DynamicResource TextStrong}" />
    </Style>

    <Style Selector=":is(Control).Blue">
        <Setter Property="Border.BorderBrush" Value="{DynamicResource Blue.BorderBrush}" />
        <Setter Property="Border.Background" Value="{DynamicResource Blue.Background}" />
    </Style>

    <Style Selector=":is(Control).GreenBorder">
        <Setter Property="Border.Background" Value="{DynamicResource GreenBorder.Background}" />
        <Setter Property="Border.BorderBrush" Value="{DynamicResource GreenBorder.BorderBrush}" />
    </Style>
    
    <Style Selector=":is(Control).SmallPadding">
        <Setter Property="Border.Padding" Value="10,4" />
    </Style>

    <Style Selector=":is(Control).SmallerPadding">
        <Setter Property="Border.Padding" Value="10,6" />
    </Style>

    <Style Selector=":is(Control).RegularPadding">
        <Setter Property="Border.Padding" Value="10" />
    </Style>

    <Style Selector=":is(Control).Rounded">
        <Setter Property="Border.CornerRadius" Value="16" />
    </Style>

    <Style Selector=":is(Control).Circle">
        <Setter Property="Border.CornerRadius" Value="1000" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Radius variants (must be after base color styles to override) -->
    <Style Selector=":is(Control).Radius-S">
        <Setter Property="Border.CornerRadius" Value="8" />
    </Style>
    <Style Selector=":is(Control).Radius-M">
        <Setter Property="Border.CornerRadius" Value="10" />
    </Style>
    <Style Selector=":is(Control).Radius-L">
        <Setter Property="Border.CornerRadius" Value="12" />
    </Style>
    <Style Selector=":is(Control).Radius-XL">
        <Setter Property="Border.CornerRadius" Value="16" />
    </Style>
    
    <Style Selector=":is(Control).GreenText">
        <Setter Property="TextElement.Foreground" Value="{DynamicResource Accent}" />
    </Style>
    
    <Style Selector=":is(Control).OrangeText">
        <Setter Property="TextElement.Foreground" Value="{DynamicResource BitcoinOrange}" />
    </Style>
    
    <Style Selector=":is(Control).BrownText">
        <Setter Property="TextElement.Foreground" Value="{DynamicResource StatLabel}" />
    </Style>
    
    <Style Selector=":is(Control).BlackText">
        <Setter Property="TextElement.Foreground" Value="{DynamicResource BodyText}" />
    </Style>

    <Design.PreviewWith>
        <Panel>
            <Panel.Styles>
                <Style Selector="StackPanel">
                    <Setter Property="Margin" Value="20" />
                    <Setter Property="Spacing" Value="10" />
                </Style>
            </Panel.Styles>
            <WrapPanel>
                <StackPanel>
                    <StackPanel.Background>
                        <VisualBrush Opacity="0.2" DestinationRect="0,0,72,72" Stretch="UniformToFill" TileMode="Tile">
                            <VisualBrush.Visual>
                                <Svg Path="/Assets/pattern.svg" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </StackPanel.Background>
                    <Border Classes="ColorPanel Yellow">
                        <TextBlock>Yellow</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Apricot">
                        <TextBlock>Apricot</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel ApricotGradient">
                        <TextBlock>ApricotGradient</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel LightGray">
                        <TextBlock>LightGray</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Green">
                        <TextBlock>Green</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Amber">
                        <TextBlock>Amber</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel AccentWash">
                        <TextBlock>AccentWash</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel DarkGreen">
                        <TextBlock>DarkGreen</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel White">
                        <TextBlock>White</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel ApricotBorder">
                        <TextBlock>ApricotBorder</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Silver">
                        <TextBlock>Silver</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Accent">
                        <TextBlock>Accent</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Bitcoin">
                        <TextBlock>Bitcoin</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Neutral">
                        <TextBlock>Neutral</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel Blue">
                        <TextBlock>Blue</TextBlock>
                    </Border>
                    <Border Classes="ColorPanel GreenBorder">
                        <TextBlock>GreenBorder</TextBlock>
                    </Border>
                </StackPanel>
                <ThemeVariantScope RequestedThemeVariant="Dark">
                    <Border Background="Black">
                        <StackPanel>
                            <Border Classes="ColorPanel Yellow">
                                <TextBlock>Yellow</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Apricot">
                                <TextBlock>Apricot</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel ApricotGradient">
                                <TextBlock>ApricotGradient</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel LightGray">
                                <TextBlock>LightGray</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Green">
                                <TextBlock>Green</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Amber">
                                <TextBlock>Amber</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel AccentWash">
                                <TextBlock>AccentWash</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel DarkGreen">
                                <TextBlock>DarkGreen</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel White">
                                <TextBlock>White</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel ApricotBorder">
                                <TextBlock>ApricotBorder</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Silver">
                                <TextBlock>Silver</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Accent">
                                <TextBlock>Accent</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Bitcoin">
                                <TextBlock>Bitcoin</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Neutral">
                                <TextBlock>Neutral</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel Blue">
                                <TextBlock>Blue</TextBlock>
                            </Border>
                            <Border Classes="ColorPanel GreenBorder">
                                <TextBlock>GreenBorder</TextBlock>
                            </Border>
                        </StackPanel></Border>
                </ThemeVariantScope>
            </WrapPanel>
        </Panel>
    </Design.PreviewWith>

</Styles>
