<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <Border Classes="Padded" Background="LightBlue" Width="200" Height="50">
                    <TextBlock>Control.Padded</TextBlock>
                </Border>
                <StackPanel Classes="Gap-M">
                    <TextBlock>Item 1</TextBlock>
                    <TextBlock>Item 2</TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector=":is(Control).Padded">
        <Setter Property="Margin" Value="20 0" />
    </Style>

    <!-- StackPanel Spacing (Gaps) -->
    <Style Selector="StackPanel.Gap-XS">
        <Setter Property="Spacing" Value="5" />
    </Style>
    <Style Selector="StackPanel.Gap-S">
        <Setter Property="Spacing" Value="10" />
    </Style>
    <Style Selector="StackPanel.Gap-M">
        <Setter Property="Spacing" Value="12" />
    </Style>
    <Style Selector="StackPanel.Gap-L">
        <Setter Property="Spacing" Value="18" />
    </Style>
    <Style Selector="StackPanel.Gap-XL">
        <Setter Property="Spacing" Value="24" />
    </Style>
    <Style Selector="StackPanel.Gap-XXL">
        <Setter Property="Spacing" Value="40" />
    </Style>



</Styles>
