<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <Card Header="Header">
                    <Card Header="Nested header">
                        CONTENT
                    </Card>
                </Card>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <x:Double x:Key="TinyGap">5</x:Double>
        <x:Double x:Key="SmallGap">10</x:Double>
        <x:Double x:Key="MediumGap">12</x:Double>
        <x:Double x:Key="BigGap">24</x:Double>
        <x:Double x:Key="HugeGap">40</x:Double>

        <Color x:Key="SuccessColor">Green</Color>
        <Color x:Key="WarningColor">Gold</Color>
        <Color x:Key="ErrorColor">Red</Color>
        <Color x:Key="DangerColor">Red</Color>

        <x:Double x:Key="FontSizeHuge">32</x:Double>
        <x:Double x:Key="FontSizeLarge">24</x:Double>
        <x:Double x:Key="FontSizeBig">20</x:Double>
        <x:Double x:Key="FontSizeNormal">16</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>

        <x:Double x:Key="IconSizeHuge">80</x:Double>
        <x:Double x:Key="IconSizeLarge">60</x:Double>
        <x:Double x:Key="IconSizeBig">40</x:Double>
        <x:Double x:Key="IconSizeNormal">30</x:Double>
        <x:Double x:Key="IconSizeSmall">20</x:Double>

        <x:Double x:Key="FlyoutThemeMaxWidth">700</x:Double>

