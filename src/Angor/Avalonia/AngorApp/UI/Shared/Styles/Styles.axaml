<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <Card Header="Header">
                    <Card Header="Nested header">
                        CONTENT
                    </Card>
                </Card>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <!-- Spacing scale (prefer Gap-*) -->
        <x:Double x:Key="Gap-XS">5</x:Double>
        <x:Double x:Key="Gap-S">10</x:Double>
        <x:Double x:Key="Gap-M">12</x:Double>
        <x:Double x:Key="Gap-L">18</x:Double>
        <x:Double x:Key="Gap-XL">24</x:Double>
        <x:Double x:Key="Gap-XXL">40</x:Double>



        <Color x:Key="SuccessColor">Green</Color>
        <Color x:Key="WarningColor">Gold</Color>
        <Color x:Key="ErrorColor">Red</Color>
        <Color x:Key="DangerColor">Red</Color>

        <x:Double x:Key="FontSizeHuge">32</x:Double>
        <x:Double x:Key="FontSizeLarge">24</x:Double>
        <x:Double x:Key="FontSizeBig">20</x:Double>
        <x:Double x:Key="FontSizeNormal">16</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>

        <x:Double x:Key="IconSizeHuge">80</x:Double>
        <x:Double x:Key="IconSizeLarge">60</x:Double>
        <x:Double x:Key="IconSizeBig">40</x:Double>
        <x:Double x:Key="IconSizeNormal">30</x:Double>
        <x:Double x:Key="IconSizeSmall">20</x:Double>

        <x:Double x:Key="FlyoutThemeMaxWidth">700</x:Double>

        <ControlTheme x:Key="{x:Type EnhancedButton}" TargetType="EnhancedButton" BasedOn="{StaticResource {x:Type EnhancedButton}}">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="TextBlock.FontWeight" Value="Bold" />
        </ControlTheme>

        <ControlTheme x:Key="DarkerButton" TargetType="EnhancedButton" BasedOn="{StaticResource {x:Type EnhancedButton}}">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="TextBlock.FontWeight" Value="Bold" />
            <!-- <Setter Property="Foreground" Value="{StaticResource Level5}}" /> -->
        </ControlTheme>
    </Styles.Resources>

    <Style Selector="Separator">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="#2B000000" />
        <Setter Property="Height" Value="2" />
    </Style>

    <Style Selector="TextBlock.Dimmed">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
    </Style>

    <Style Selector="Border.Alert">
        <Setter Property="Background" Value="{DynamicResource SystemListLowColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemListMediumColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10 16" />
        <Setter Property="Margin" Value="0,16" />
    </Style>

    <Style Selector="EnhancedButton.HorizontalStretch">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector=":is(UserControl)">
        <Setter Property="IconOptions.Size" Value="{StaticResource IconSizeSmall}" />
    </Style>

    <Style Selector="ListBox.Rounded">
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style Selector=":is(TemplatedControl).Small">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════
         STACKPANEL SPACING - Atomic Classes (combinable, single responsibility)
         Usage: <StackPanel Classes="Gap-M" />
         ═══════════════════════════════════════════════════════════════════════ -->
    <Style Selector="StackPanel.Gap-XS">
        <Setter Property="Spacing" Value="{StaticResource Gap-XS}" />
    </Style>
    <Style Selector="StackPanel.Gap-S">
        <Setter Property="Spacing" Value="{StaticResource Gap-S}" />
    </Style>
    <Style Selector="StackPanel.Gap-M">
        <Setter Property="Spacing" Value="{StaticResource Gap-M}" />
    </Style>
    <Style Selector="StackPanel.Gap-L">
        <Setter Property="Spacing" Value="{StaticResource Gap-L}" />
    </Style>
    <Style Selector="StackPanel.Gap-XL">
        <Setter Property="Spacing" Value="{StaticResource Gap-XL}" />
    </Style>
    <Style Selector="StackPanel.Gap-XXL">
        <Setter Property="Spacing" Value="{StaticResource Gap-XXL}" />
    </Style>

    <!-- Legacy aliases (prefer Gap-*) -->


    <Style Selector="Card Card">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#31000000" />
    </Style>

    <Style Selector="BalancedWrapGrid">
        <Setter Property="HorizontalSpacing" Value="10" />
        <Setter Property="VerticalSpacing" Value="10" />
    </Style>

    <Style Selector=":is(TemplatedControl).NoPadding">
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="CardGrid.Listing">
        <Setter Property="MinColumnWidth" Value="300" />
        <Setter Property="MaxColumnWidth" Value="450" />
    </Style>


</Styles>
