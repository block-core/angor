<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shell="clr-namespace:AngorApp.UI.Sections.Shell"
             mc:Ignorable="d" 
             x:Class="AngorApp.UI.Sections.Shell.NetworkView" x:DataType="shell:INetworkViewModel">
    
    <Design.DataContext>
        <shell:NetworkViewModelSample />
    </Design.DataContext>

    <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal" Classes="SmallGap">
        <ContentControl VerticalAlignment="Center" Content="{Icon fa-network-wired}" />
        <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
        <TextBlock VerticalAlignment="Center" FontWeight="Thin" Text="{Binding NetworkType}" />
    </StackPanel>
</UserControl>
