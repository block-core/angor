<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:penalties="clr-namespace:AngorApp.UI.Sections.Portfolio.Penalties"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:a="clr-namespace:AngorApp.UI.Shared.Controls"
             mc:Ignorable="d" d:DesignWidth="1600"
             x:Class="AngorApp.UI.Sections.Portfolio.Recover.RecoverView" x:DataType="penalties:IPenaltiesViewModel">

    <Design.DataContext>
        <penalties:PenaltiesViewModelSample />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Styles>

    <a:PageContainer>
        <ScrollViewer>
            <DockPanel VerticalSpacing="20">
                <Card DockPanel.Dock="Top" Header="Recovery" Theme="{StaticResource WideCard}" IsAdaptiveFlowEnabled="True" Subheader="Manage and monitor recovery stages for your project">
                    <Card.HeaderStartContent>
                        <ui:Icon Source="svg:/Assets/recovery.svg" />
                    </Card.HeaderStartContent>
                    <Card.HeaderEndContent>
                        <UniformGrid ColumnSpacing="20" Rows="1">
                            <EnhancedButton HorizontalAlignment="Stretch">
                                Refresh
                                <EnhancedButton.Icon>
                                    <ui:Icon Source="fa-arrows-rotate" />
                                </EnhancedButton.Icon>
                            </EnhancedButton>
                            <EnhancedButton HorizontalAlignment="Stretch">
                                Pending Message
                                <EnhancedButton.Icon>
                                    <ui:Icon Source="fa-message" />
                                </EnhancedButton.Icon>
                            </EnhancedButton>
                        </UniformGrid>
                    </Card.HeaderEndContent>
                </Card>

                <Loading LoadingText="Loading recover...">
                    <StackPanel HorizontalAlignment="Stretch" Spacing="20">
                        <!-- Project ID Box -->
                        <Card Theme="{StaticResource AngorHighlightedContentCard}" Header="Project ID" Content="angor1quyhgedvff22h2fmjc3lwvlruxx6xv76gzptm50" />

                        <!-- Info Cards -->
                        <UniformGrid Columns="2" Rows="2" ColumnSpacing="20" RowSpacing="20" >
                            <Card Theme="{StaticResource AngorHighlightedContentCard}" Header="Total Funds" Content="0 TBTC" />
                            <Card Theme="{StaticResource AngorHighlightedContentCard}" Header="Expiry Date" Content="05/09/2025" />
                            <Card Theme="{StaticResource AngorHighlightedContentCard}" Header="Penalty Period" Content="90 days" />
                            <Card Theme="{StaticResource AngorHighlightedContentCard}" Header="Transaction">
                                <EnhancedButton Content="View" Width="80" Height="36" />
                            </Card>
                        </UniformGrid>

                        <!-- Table -->
                        <Card Theme="{StaticResource AngorHighlightedContentCard}" Header="Stages">
                            <StackPanel>
                                <!-- Table Header -->
                                <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                                    <TextBlock Text="STAGE" Foreground="{DynamicResource SystemBaseMediumHighColor}" FontWeight="Bold" VerticalAlignment="Center" />
                                    <TextBlock Text="AMOUNT" Foreground="{DynamicResource SystemBaseMediumHighColor}" FontWeight="Bold" Grid.Column="1" VerticalAlignment="Center" />
                                    <TextBlock Text="STATUS" Foreground="{DynamicResource SystemBaseMediumHighColor}" FontWeight="Bold" Grid.Column="2" VerticalAlignment="Center" />
                                </Grid>
                                <Border BorderBrush="#22505A" BorderThickness="1" />
                                <!-- Table Rows (Static Example) -->
                                <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,10,0,10" HorizontalAlignment="Stretch">
                                    <TextBlock Text="1" VerticalAlignment="Center" />
                                    <TextBlock Text="0.1 TBTC" Grid.Column="1" VerticalAlignment="Center" />
                                    <EnhancedButton Grid.Column="2"
                                            Padding="10,2"
                                            CornerRadius="6"
                                            BorderThickness="0">
                                        Penalty, released in 89.9 days
                                    </EnhancedButton>
                                </Grid>
                                <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                                    <TextBlock Text="2" VerticalAlignment="Center" />
                                    <TextBlock Text="0.3 TBTC" Grid.Column="1" VerticalAlignment="Center" />
                                    <EnhancedButton Grid.Column="2"
                                            Padding="10,2"
                                            CornerRadius="6"
                                            BorderThickness="0">
                                        Penalty, released in 89.9 days
                                    </EnhancedButton>
                                </Grid>
                                <Grid ColumnDefinitions="1.5*,2*,2*" Margin="0,0,0,0" HorizontalAlignment="Stretch">
                                    <TextBlock Text="3" VerticalAlignment="Center" />
                                    <TextBlock Text="0.6 TBTC" Grid.Column="1" VerticalAlignment="Center" />
                                    <EnhancedButton Grid.Column="2"
                                            Padding="10,2"
                                            CornerRadius="6"
                                            BorderThickness="0">
                                        Penalty, released in 89.9 days
                                    </EnhancedButton>
                                </Grid>
                            </StackPanel>
                        </Card>
                    </StackPanel>
                </Loading>
            </DockPanel>
        </ScrollViewer>
    </a:PageContainer>
</UserControl>