<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:moonshot="clr-namespace:AngorApp.UI.Sections.Founder.CreateProject.Moonshot"
			 mc:Ignorable="d"
			 x:DataType="moonshot:IImportFromMoonshotViewModel"
			 Width="450" MinHeight="200"
			 x:Class="AngorApp.UI.Sections.Founder.CreateProject.Moonshot.ImportFromMoonshotView">

	<StackPanel Spacing="20" VerticalAlignment="Center">
		<ContentControl IconOptions.Size="40" Content="{Icon mdi-rocket-launch}" />

		<TextBlock TextAlignment="Center"
				   Text="Import project from Moonshot"
				   TextWrapping="Wrap"
				   FontWeight="SemiBold"
				   FontSize="16" />

		<TextBlock TextAlignment="Center"
				   Text="Enter the Nostr event ID of the Moonshot project to import its details."
				   TextWrapping="Wrap"
				   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

		<StackPanel Spacing="8">
			<TextBlock Text="Nostr Event ID" FontWeight="SemiBold" />
			<TextBox Watermark="Enter 64-character hex event ID"
					 Text="{Binding EventId}"
					 MaxLength="64">
				<Interaction.Behaviors>
					<FocusOnAttachedBehavior />
				</Interaction.Behaviors>
			</TextBox>
			<TextBlock Text="Example: 3dbd123b39677db77f7d2523676fb3120a6584b0445b155324ea50bfd5885c04"
					   FontSize="10"
					   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
					   TextWrapping="Wrap" />
		</StackPanel>

		<!-- Error message display -->
		<TextBlock Text="{Binding ErrorMessage}"
				   Foreground="Red"
				   TextWrapping="Wrap"
				   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

		<!-- Loading indicator -->
		<StackPanel Orientation="Horizontal"
					HorizontalAlignment="Center"
					Spacing="10"
					IsVisible="{Binding IsLoading}">
			<ProgressBar IsIndeterminate="True" Width="100" />
			<TextBlock Text="Fetching from Nostr..." VerticalAlignment="Center" />
		</StackPanel>
	</StackPanel>
</UserControl>
