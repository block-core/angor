<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:angorApp="clr-namespace:AngorApp"
             xmlns:funds="clr-namespace:AngorApp.UI.Sections.Funds"
             xmlns:a="clr-namespace:AngorApp.UI.Sections.Funds.Accounts"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="AngorApp.UI.Sections.Funds.FundsSectionView"
             x:DataType="funds:IFundsSectionViewModel">

    <Design.DataContext>
        <funds:FundsSectionViewModelSample />
    </Design.DataContext>

    <Panel>
        <a:AccountsView IsVisible="{Binding  !!AccountGroups.Count}" DataContext="{Binding Accounts}" />
        <ContentControl IsVisible="{Binding  !!!Accounts.AccountGroups.Count}"
                        Content="{Binding Empty}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
    </Panel>
</UserControl>
