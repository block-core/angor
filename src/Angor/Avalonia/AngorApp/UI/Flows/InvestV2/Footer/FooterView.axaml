<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:AngorApp.UI.Flows.InvestV2.Footer"
             xmlns:investV2="clr-namespace:AngorApp.UI.Flows.InvestV2"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="AngorApp.UI.Flows.InvestV2.Footer.FooterView"
             x:DataType="l:IFooterViewModel">

    <Design.DataContext>
        <investV2:InvestViewModelSample />
    </Design.DataContext>

    <StackPanel Spacing="30" Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
        <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center">
            <Run>Total (incl. fees):</Run>
            <Run Foreground="{DynamicResource TextStrong}" FontWeight="Bold" Text="{Binding  AmountToInvest.Value.DecimalString}" />
        </TextBlock>
        <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center">
            <Run>Stages:</Run>
            <Run Foreground="{DynamicResource TextStrong}" FontWeight="Bold" Text="{Binding  StageCount^, StringFormat='{}{0} releases'}" />
        </TextBlock>

        <!-- Penalty threshold indicator -->
        <Panel IsVisible="{Binding HasPenaltyThreshold}" VerticalAlignment="Center">
            <!-- Above threshold: requires founder approval -->
            <Border IsVisible="{Binding IsAbovePenaltyThreshold^}"
                    Padding="8 4" CornerRadius="4" Background="#30FF8C00">
                <TextBlock Classes="Size-XS" VerticalAlignment="Center"
                           Foreground="#FF8C00" FontWeight="SemiBold"
                           Text="Requires Approval" />
            </Border>
            <!-- Below threshold: direct publish -->
            <Border IsVisible="{Binding !IsAbovePenaltyThreshold^}"
                    Padding="8 4" CornerRadius="4" Background="{DynamicResource SoftGreen}">
                <TextBlock Classes="Size-XS" VerticalAlignment="Center"
                           Foreground="{DynamicResource Brand}" FontWeight="SemiBold"
                           Text="No Approval Needed" />
            </Border>
        </Panel>

        <EnhancedButton Command="{Binding Invest}" DockPanel.Dock="Right" Classes="Outline" Icon="{Icon fa-chart-line}" Content="Invest" />
    </StackPanel>
</UserControl>