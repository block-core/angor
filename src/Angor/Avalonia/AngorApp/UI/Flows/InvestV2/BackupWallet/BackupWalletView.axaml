<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:AngorApp.UI.Flows.InvestV2.BackupWallet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AngorApp.UI.Flows.InvestV2.BackupWallet.BackupWalletView" x:DataType="l:IBackupWalletViewModel">
    
    <Design.DataContext>
        <l:BackupWalletViewModelSample></l:BackupWalletViewModelSample>
    </Design.DataContext>
    
    <StackPanel Classes="Gap-XL">
        <Border Classes="ColorPanel Amber Circle" IconOptions.Size="36" Padding="20">
            <Border.Child>
                <ContentControl Content="{Icon fa-lock}" />
            </Border.Child>
        </Border>
        <TextBlock TextAlignment="Center" Classes="Weight-Bold Size-XXL Strong Wrap">Backup Your Account</TextBlock>
        <TextBlock TextAlignment="Center" Classes="Size-M" Text="Download your seed phrase and keep it safe. You'll need this to recover your wallet if you lose access." />
    </StackPanel>
</UserControl>
