<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:angorApp="clr-namespace:AngorApp"
             xmlns:l="clr-namespace:AngorApp.UI.Flows.InvestV2.InvestmentResult"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="AngorApp.UI.Flows.InvestV2.InvestmentResult.InvestResultView" x:DataType="l:InvestResultViewModel">
    <StackPanel Classes="Gap-XL">
        <Border Classes="AccentWash Circle" IconOptions.Size="36" Padding="20">
            <Border.Child>
                <ContentControl IconOptions.Fill="{DynamicResource Brand}" Padding="8" Content="{Icon fa-check}" />
            </Border.Child>
        </Border>
        <!-- Above threshold: pending founder approval -->
        <TextBlock TextAlignment="Center" Classes="Weight-Bold Size-XXL Strong Wrap"
                   IsVisible="{Binding RequiresApproval}">Investment Pending Approval</TextBlock>
        <TextBlock TextAlignment="Center" Classes="Size-M"
                   IsVisible="{Binding RequiresApproval}">
            <Run>Your investment of</Run>
            <Run Text="{Binding Amount.DecimalString}" />
            <Run Text="is pending approval by the founder. Once approved, you'll confirm to release the funds." />
        </TextBlock>

        <!-- Below threshold: invested directly -->
        <TextBlock TextAlignment="Center" Classes="Weight-Bold Size-XXL Strong Wrap"
                   IsVisible="{Binding !RequiresApproval}">Investment Completed</TextBlock>
        <TextBlock TextAlignment="Center" Classes="Size-M"
                   IsVisible="{Binding !RequiresApproval}">
            <Run>Your investment of</Run>
            <Run Text="{Binding Amount.DecimalString}" />
            <Run Text="has been successfully submitted to the network." />
        </TextBlock>
    </StackPanel>

</UserControl>
