<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:AngorApp.Model.Domain.Wallet.Password;assembly=AngorApp.Model"
             mc:Ignorable="d"
             x:DataType="p:IPasswordViewModel"
             Width="300" Height="200"
             x:Class="AngorApp.Model.Domain.Wallet.Password.PasswordView">
    
    <Design.DataContext>
        <p:PasswordViewModelDesign Text="Please, enter your password" Icon="{Icon mdi-lock}" />
    </Design.DataContext>
    
    <StackPanel Spacing="20" VerticalAlignment="Center" >
        <ContentControl IconOptions.Size="40" Content="{Binding Icon}" />
        <TextBlock TextAlignment="Center" Text="{Binding Text}" TextWrapping="Wrap" VerticalAlignment="Center" />
        <TextBox Theme="{StaticResource PasswordBox}" Classes="Untouched" Watermark="Encryption password" Text="{Binding Password}">
            <Interaction.Behaviors>
                <FocusOnAttachedBehavior />
            </Interaction.Behaviors>
        </TextBox>
    </StackPanel>
</UserControl>
