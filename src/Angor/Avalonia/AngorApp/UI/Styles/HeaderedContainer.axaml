<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <HeaderedContainer Background="Aqua" Header="HEADER">CONTENT</HeaderedContainer>
        </Border>
    </Design.PreviewWith>

    <Style Selector="HeaderedContainer">
        <Setter Property="Padding" Value="0" />
    </Style>
    
    <Style Selector="HeaderedContainer /template/ ContentControl#Header">
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</Styles>
