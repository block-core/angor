<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <Card Header="Header">
                    <Card Header="Nested header">
                        CONTENT
                    </Card>
                </Card>
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    
    <Styles.Resources>
        <x:Double x:Key="TinyGap">5</x:Double>
        <x:Double x:Key="SmallGap">10</x:Double>
        <x:Double x:Key="BigGap">20</x:Double>
        <x:Double x:Key="HugeGap">40</x:Double>
    </Styles.Resources>
    
    
    <Style Selector="ListBox.Rounded">
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style Selector=":is(TemplatedControl).Small">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>
    
    <Style Selector="StackPanel.HugeGap"> 
        <Setter Property="Spacing" Value="{StaticResource BigGap}" />
    </Style>
    
    <Style Selector="StackPanel.BigGap"> 
        <Setter Property="Spacing" Value="{StaticResource BigGap}" />
    </Style>
    
    <Style Selector="StackPanel.SmallGap"> 
        <Setter Property="Spacing" Value="{StaticResource SmallGap}" />
    </Style>
    
    <Style Selector="StackPanel.TinyGap"> 
        <Setter Property="Spacing" Value="{StaticResource TinyGap}" />
    </Style>

    <Style Selector="Card Card">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#31000000" />
    </Style>
    
    <Style Selector="BalancedWrapGrid">
        <Setter Property="HorizontalSpacing" Value="10" />
        <Setter Property="VerticalSpacing" Value="10" />
    </Style>
    
    <Style Selector=":is(TemplatedControl).NoPadding">
        <Setter Property="Padding" Value="0" />
    </Style>
    
    <Style Selector="CardGrid.Listing">
        <Setter Property="MinColumnWidth" Value="300" />
        <Setter Property="MaxColumnWidth" Value="450" />
    </Style>
    
    <Style Selector="Frame">
        <Setter Property="IsBackButtonVisible" Value="False" />
    </Style>

</Styles>
