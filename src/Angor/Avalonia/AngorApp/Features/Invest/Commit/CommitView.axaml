<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:commit="clr-namespace:AngorApp.Features.Invest.Commit"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:controls1="clr-namespace:AngorApp.UI.Controls"
             mc:Ignorable="d" 
             x:Class="AngorApp.Features.Invest.Commit.CommitView"
             x:DataType="commit:ICommitViewModel">


    <DockPanel>
        <StackPanel Spacing="10" DockPanel.Dock="Top">
            <TextBlock Text="This is a summary of the invesment" />
            <HeaderedContentControl Theme="{StaticResource Inline}" Header="Amount to invest">
                <TextBlock Text="{Binding SatsToInvest, StringFormat={x:Static controls1:MiscConverters.Sats}}" />
            </HeaderedContentControl>
            <HeaderedContentControl Theme="{StaticResource Inline}" Header="Total fee">
                <TextBlock Text="{Binding Totalfee, StringFormat={x:Static controls1:MiscConverters.Sats}}" />
            </HeaderedContentControl>
        </StackPanel>
        <Button Margin="20" Command="{Binding RequestInvestment}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button.Content>
                <Grid ColumnDefinitions="30,*,30">
                    <controls:ProgressRing IsActive="{Binding RequestInvestment.IsExecuting^}" IsIndeterminate="True" />
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" Margin="10 0">
                        Confirm
                    </TextBlock>
                </Grid>
            </Button.Content>
        </Button>
    </DockPanel>
</UserControl>