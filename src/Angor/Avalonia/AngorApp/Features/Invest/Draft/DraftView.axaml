<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:AngorApp.UI.Controls"
             xmlns:draft1="clr-namespace:AngorApp.Features.Invest.Draft"
             xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Collections"
             xmlns:p="clr-namespace:Zafiro.Avalonia.Controls;assembly=Zafiro.Avalonia"
             mc:Ignorable="d" x:Class="AngorApp.Features.Invest.Draft.DraftView"
             Width="400"
             Height="600"
             x:DataType="draft1:IDraftViewModel">

    <Design.DataContext>
        <draft1:DraftViewModelDesign />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="StackPanel">
            <Setter Property="Spacing" Value="10" />
        </Style>
    </UserControl.Styles>

    <DockPanel Grid.IsSharedSizeScope="True">
        <StackPanel DockPanel.Dock="Top">
            <HeaderedContentControl Theme="{StaticResource InlineHeaderedContentControl}" Header="Amount">
                <TextBlock Text="{Binding SatsToInvest, StringFormat={x:Static controls:MiscConverters.Sats}}" />
            </HeaderedContentControl>
            <p:Pane Header="Feerate">
                <controls:FeerateSelector FeeCalculator="{Binding FeeCalculator}" Feerate="{Binding Feerate}" />
            </p:Pane>
        </StackPanel>
        <p:Loading IsLoading="{Binding Path=IsBusy^}" LoadingText="Calculating transaction...">
            <HeaderedContentControl Margin="0 20 0 0" VerticalAlignment="Top" IsVisible="{Binding Draft, Converter={x:Static ObjectConverters.IsNotNull}}" Header="Fee" Theme="{StaticResource InlineHeaderedContentControl}">
                <TextBlock Text="{Binding Draft.TotalFee, StringFormat={x:Static controls:MiscConverters.Sats}}" />
            </HeaderedContentControl>
        </p:Loading>
    </DockPanel>
</UserControl>