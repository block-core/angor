<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:password1="clr-namespace:Angor.UI.Model.Implementation.Wallet.Password"
             mc:Ignorable="d" 
             x:DataType="password1:PasswordViewModel" Width="300"
             x:Class="Angor.UI.Model.Implementation.Wallet.Password.PasswordView">
    <StackPanel Spacing="10" Margin="10 20">
        <TextBlock Text="{Binding Text}" TextWrapping="Wrap" VerticalAlignment="Center" />
        <TextBox Theme="{StaticResource PasswordBox}" Classes="untouched" Watermark="Encryption password" Text="{Binding Password}" />
    </StackPanel>
</UserControl>